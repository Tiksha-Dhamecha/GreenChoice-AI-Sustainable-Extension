{
  "manifest_version": 3,
  "name": "GreenChoice Sustainability Checker",
  "version": "1.2.0",
  "description": "Sustainability scoring, materials, carbon estimate, alternatives, and more.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}