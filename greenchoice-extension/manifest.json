{
  "manifest_version": 3,
  "name": "GreenChoice Sustainability Checker",
  "version": "1.2.0",
  "description": "Sustainability scoring, materials, carbon estimate, alternatives, and more.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
     "https://www.amazon.in/*",
      "https://www.flipkart.com/*",
      "https://www.myntra.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "*://*.flipkart.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
  {
    "resources": ["chart.js"],
    "matches": ["<all_urls>"]
  }
],
"background": {
  "service_worker": "background.js"
}

}